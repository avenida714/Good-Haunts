extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1= 'Good Haunts'
  p Welcome to Good Haunts, where you can find the goodest haunts
    ul
      each haunt in haunts
        li
          div(class= hauntCard)
            img(src='images/image-' + haunt.id + '.jpeg' alt='image')
            p= haunt.title
            p= haunt.score
  div(class= 'login_signin')
    //- if isnt logged in
    a(href="/login") Login
    a(href="/signup") Signup
    //- if is logged in
    a(href="/users/:id") View Profile
